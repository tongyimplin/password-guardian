<h1>{{title}}</h1>
<form action="addpass" method="post">
    <div class="form-group">
        <label>所属应用:</label>
        <span>{{account.appName}}</span>
    </div>
    <div class="form-group">
        <label>账号:</label>
        <span>{{account.userName}}</span>
    </div>
    <div class="form-group">
        <label>密码名称:</label>
        <input name="passName" type="text" class="form-control" placeholder="如：登录密码">
    </div>
    <div class="form-group">
        <label>密码:</label>
        <input name="password" type="password" class="form-control" placeholder="请输入密码">
    </div>
    <div class="form-group">
        <label>密码类型:</label>
        <select name="passType">
            <option value="0">普通密码</option>
            <option value="1">六位数字密码</option>
        </select>
    </div>
    <div class="form-group">
        <input type="hidden" name="accountId" value="{{account.id}}">
        <input type="submit" class="btn btn-primary" value="提交">
    </div>
</form>
